{
  "manifest_version": 3,
  "name": "Youtube Music Quiet!",
  "description": "A simple open source extension designed to control the volumn on the youtube music page.",
  "version": "0.1",
  "permissions": [
    "storage",
    "tabCapture",
    "webNavigation",
    "activeTab",
    "scripting",
    "desktopCapture"
  ],
  "host_permissions": ["https://music.youtube.com/*"],
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["js/serviceMessages.js", "js/logger.js"]
    }
  ],
  "action": {
    "default_icon": "yt-music-quiet.png",
    "default_popup": "popup.html"
  }
}
