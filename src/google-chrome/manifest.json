{
  "manifest_version": 3,
  "name": "Youtube Music Quiet!",
  "description": "A simple extension designed to control the volumn on the youtube music page.",
  "version": "0.1",
  "permissions": ["storage", "tabs", "tabCapture"],
  "host_permissions": [
    "https://music.youtube.com/*",
    "http://music.youtube.com/*"
  ],
  "action": {
    "default_popup": "index.html",
    "default_icon": "yt-music-quiet.png"
  },
  "background": {
    "service_worker": "service-worker.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["https://music.youtube.com/*", "http://music.youtube.com/*"],
      "js": ["content-script.js"]
    }
  ],
  "web_accessible_resources": [
    {
      "matches": ["<all_urls>"],
      "resources": ["js/serviceMessages.js", "js/logger.js"]
    }
  ]
}
